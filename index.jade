//- Main Container
#megatron.megatron.megatron--desktop(ng-controller="megatron")

  //- Optional
  .megatron__head

  //- Body
  .megatron__body(ng-class="'video--' + videoSize")

    //- First arm - Title, Video, Actions
    .megatron__arm.arm--one

      //- Title bar
      .megatron__bar
        h3.megatron__title Megatron (Final Battle)
        .megatron__close: i.fa.fa-times

      //- Video Container
      .megatron__video
        video(poster="megatron.jpg" autoplay)
          source(src="http://clips.vorwaerts-gmbh.de/VfE.webm" type="video/webm")
            //- video(poster="http://placehold.it/320x240" autoplay)


        //- <video width="640" height="360" controls="" autoplay="">
